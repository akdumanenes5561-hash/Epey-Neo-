const phoneList = document.getElementById("phoneList");
const details = document.getElementById("details");

function renderPhones(list) {
  phoneList.innerHTML = "";
  list.forEach(p => {
    const card = document.createElement("div");
    card.className = "phone";
    card.innerHTML = `
      <img src="${p.img}">
      <h2>${p.name}</h2>
      <div class="specs">${p.specs}</div>
      <a href="${p.link}" class="btn" target="_blank">Hepsiburada'da G√∂r</a>
    `;
    card.onclick = () => showDetails(p);
    phoneList.appendChild(card);
  });
}

function showDetails(p) {
  phoneList.style.display = "none";
  details.style.display = "block";
  document.getElementById("detailImg").src = p.img;
  document.getElementById("detailTitle").textContent = p.name;
  fillList(p.display, "detailDisplay");
  fillList(p.camera, "detailCamera");
  fillList(p.performance, "detailPerformance");
  fillList(p.battery, "detailBattery");
  fillList(p.other, "detailOther");
}

function goBack() {
  details.style.display = "none";
  phoneList.style.display = "grid";
}

function fillList(arr, id) {
  const ul = document.getElementById(id);
  ul.innerHTML = "";
  arr.forEach(i => {
    const li = document.createElement("li");
    li.textContent = i;
    ul.appendChild(li);
  });
}

renderPhones(phones);

document.getElementById("search").addEventListener("input", e => {
  const val = e.target.value.toLowerCase();
  renderPhones(phones.filter(p => p.name.toLowerCase().includes(val)));
});
